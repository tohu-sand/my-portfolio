---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact - 豆腐さんど">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-8">Contact</h1>

    <div class="bg-white dark:bg-stone-800 rounded-lg shadow-md p-6 border border-stone-200 dark:border-stone-700">
      <form action="https://ssgform.com/s/EUaMBbxRYZGb" method="post" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-stone-700 dark:text-stone-300 mb-2">
            お名前 <span class="text-red-500">*</span>
          </label>
          <input 
            type="text" 
            id="name"
            name="お名前" 
            required 
            class="w-full px-3 py-2 border border-stone-300 dark:border-stone-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-stone-700 dark:text-stone-100 transition-colors"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-stone-700 dark:text-stone-300 mb-2">
            メールアドレス <span class="text-red-500">*</span>
          </label>
          <input 
            type="email" 
            id="email"
            name="メールアドレス" 
            required 
            class="w-full px-3 py-2 border border-stone-300 dark:border-stone-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-stone-700 dark:text-stone-100 transition-colors"
          />
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-stone-700 dark:text-stone-300 mb-2">
            件名
          </label>
          <input 
            type="text" 
            id="subject"
            name="件名" 
            class="w-full px-3 py-2 border border-stone-300 dark:border-stone-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-stone-700 dark:text-stone-100 transition-colors"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-stone-700 dark:text-stone-300 mb-2">
            お問い合わせ内容 <span class="text-red-500">*</span>
          </label>
          <textarea 
            id="message"
            name="お問い合わせ内容" 
            required 
            rows="6"
            class="w-full px-3 py-2 border border-stone-300 dark:border-stone-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-stone-700 dark:text-stone-100 transition-colors resize-vertical"
          ></textarea>
        </div>

        <div>
          <div class="g-recaptcha" data-sitekey="6LelK5srAAAAAIAm7mIAGJZtIz7ovGSb1M5RObAQ"></div>
        </div>

        <div class="text-center">
          <button 
            type="submit"
            class="bg-gray-600 hover:bg-gray-700 dark:bg-gray-700 dark:hover:bg-gray-600 text-white font-medium py-3 px-8 rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 dark:focus:ring-offset-stone-800"
          >
            送信する
          </button>
        </div>
      </form>
    </div>

  </div>
</BaseLayout>
