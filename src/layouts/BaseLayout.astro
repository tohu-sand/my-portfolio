---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
const { 
  title = "Site Title", 
  description = "豆腐さんどのホームページ",
  ogTitle,
  ogDescription,
  ogImage = "https://cdn.tohu-sand.com/illust/card.png",
  ogUrl = "https://tohu-sand.com/",
  twitterCard = "summary",
  twitterImageAlt = "豆腐さんど (@tohu_sand) - ホームページ画像"
} = Astro.props;

// デフォルトのOGタイトルとディスクリプションを設定
const finalOgTitle = ogTitle || title;
const finalOgDescription = ogDescription || description;
---
<!DOCTYPE html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={ogUrl} />
    
    <!-- Begin Social Card Metadata -->
    <!-- Open Graph (used by Bluesky, Facebook, LINE etc.) -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={ogUrl}>
    <meta property="og:title" content={finalOgTitle}>
    <meta property="og:description" content={finalOgDescription}>
    <meta property="og:image" content={ogImage}>
    <meta property="og:locale" content="ja_JP">

    <!-- Twitter Card -->
    <meta name="twitter:card" content={twitterCard}>
    <meta name="twitter:site" content="@tohu_sand">
    <meta name="twitter:creator" content="@tohu_sand">
    <meta name="twitter:title" content={finalOgTitle}>
    <meta name="twitter:description" content={finalOgDescription}>
    <meta name="twitter:image" content={ogImage}>
    <meta name="twitter:image:alt" content={twitterImageAlt}>
    <!-- End Social Card Metadata -->

    <script is:inline>
      const theme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (theme === 'dark' || (!theme && prefersDark)) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <style>
      html {
        overflow-y: scroll;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col font-display bg-stone-50 dark:bg-stone-900 text-stone-900 dark:text-stone-100 transition-colors">
    <NavBar />
    <main class="flex-1 container mx-auto p-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
