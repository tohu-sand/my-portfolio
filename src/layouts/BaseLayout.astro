---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
const { 
  title = "Site Title", 
  description = "豆腐さんどのホームページ",
  ogTitle,
  ogDescription,
  ogImage = "https://cdn.tohu-sand.com/illust/card.png",
  ogUrl,
  twitterCard = "summary",
  twitterTitle,
  twitterImageAlt = "豆腐さんど (@tohu_sand) - ホームページ画像",
  robots,
  adsense = false,
  recaptcha = false
} = Astro.props;

// デフォルトのOGタイトルとディスクリプション、Twitterタイトルを設定
const finalOgTitle = ogTitle || title;
const finalOgDescription = ogDescription || description;
const finalTwitterTitle = twitterTitle || finalOgTitle;
const fallbackUrl = new URL(Astro.url.pathname, Astro.site ?? Astro.url).toString();
const finalOgUrl = ogUrl || fallbackUrl;
---
<!DOCTYPE html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={finalOgUrl} />
    <link rel="preconnect" href="https://cdn.tohu-sand.com" crossorigin />
    {robots && <meta name="robots" content={robots} />}
    <meta name="Hatena::Bookmark" content="nocomment" />
    
    <!-- Begin Social Card Metadata -->
    <!-- Open Graph (used by Bluesky, Facebook, LINE etc.) -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={finalOgUrl}>
    <meta property="og:title" content={finalOgTitle}>
    <meta property="og:description" content={finalOgDescription}>
    <meta property="og:image" content={ogImage}>
    <meta property="og:locale" content="ja_JP">

    <!-- Twitter Card -->
    <meta name="twitter:card" content={twitterCard}>
    <meta name="twitter:site" content="@tohu_sand">
    <meta name="twitter:creator" content="@tohu_sand">
    <meta name="twitter:title" content={finalTwitterTitle}>
    <meta name="twitter:description" content={finalOgDescription}>
    <meta name="twitter:image" content={ogImage}>
    <meta name="twitter:image:alt" content={twitterImageAlt}>
    <!-- End Social Card Metadata -->

    <!-- RSS Feeds -->
    <link rel="alternate" type="application/rss+xml" title="豆腐さんど: ブログ" href={`${Astro.site}rss.xml`} />
    <link rel="alternate" type="application/rss+xml" title="豆腐さんど: お知らせ" href={`${Astro.site}info/rss.xml`} />
    <link rel="alternate" type="application/rss+xml" title="豆腐さんど: ギャラリー" href={`${Astro.site}gallery/rss.xml`} />

    {adsense && (
      <script
        async
        src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4367665159115458"
        crossorigin="anonymous"
      ></script>
    )}
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (!theme) {
        localStorage.setItem('theme', 'dark');
        document.documentElement.classList.add('dark');
      } else if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
    {recaptcha && <script src="https://www.google.com/recaptcha/api.js" async defer></script>}
    <style>
      html {
        overflow-y: scroll;
      }
      :root {
        --accent: #f97316;
        --accent-hover: #ea580c;
        --accent-contrast: #ffffff;
      }
      :root.dark {
        --accent: #fb923c;
        --accent-hover: #fdba74;
        --accent-contrast: #1a0f05;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col font-display bg-stone-50 dark:bg-stone-900 text-stone-900 dark:text-stone-100 transition-colors">
    <NavBar />
    <main class="flex-1 container mx-auto p-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
