---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
const { title = "Site Title" } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="豆腐さんどのホームページ" />
    
    <!-- Begin Social Card Metadata -->
    <!-- Open Graph (used by Bluesky, Facebook, LINE etc.) -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://tohu-sand.com/">
    <meta property="og:title" content="豆腐さんど (@tohu_sand) - ホームページ">
    <meta property="og:description" content="豆腐さんどのホームページです。イラストや最新情報を掲載しています。">
    <meta property="og:image" content="https://cdn.tohu-sand.com/illust/card.png">
    <meta property="og:locale" content="ja_JP">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@tohu_sand">
    <meta name="twitter:creator" content="@tohu_sand">
    <meta name="twitter:title" content="豆腐さんど (@tohu_sand) - ホームページ">
    <meta name="twitter:description" content="豆腐さんどのホームページです。イラストや最新情報を掲載しています。">
    <meta name="twitter:image" content="https://cdn.tohu-sand.com/illust/card.png">
    <meta name="twitter:image:alt" content="豆腐さんど (@tohu_sand) - ホームページ画像">
    <!-- End Social Card Metadata -->

    <script is:inline>
      const theme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (theme === 'dark' || (!theme && prefersDark)) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <style>
      html {
        overflow-y: scroll;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col font-display bg-stone-50 dark:bg-stone-900 text-stone-900 dark:text-stone-100 transition-colors">
    <NavBar />
    <main class="flex-1 container mx-auto p-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
