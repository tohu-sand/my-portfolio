---
const { entry } = Astro.props;
const { data } = entry;

const categoryLabel = data.category ? `#${data.category}` : "#Info";
const dateStr = data.date.toLocaleDateString("ja-JP", {
  year: "numeric",
  month: "numeric",
  day: "numeric",
});
---
<article class="border rounded-xl p-4 shadow hover:shadow-lg transition">
  <h3 class="text-lg font-semibold">{data.title}</h3>

  <p class="mt-1 font-medium text-black-600">{categoryLabel}</p>

  <p class="text-sm text-stone-600">
    {dateStr}
    {data.location && ` ${data.location}`}
  </p>

  {data.description && <p class="mt-2 text-sm">{data.description}</p>}

  {data.url && (
    <a
      href={data.url}
      class="text-blue-600 hover:underline mt-2 inline-block"
      target="_blank"
      rel="noopener"
    >
      関連リンク
    </a>
  )}
</article>
